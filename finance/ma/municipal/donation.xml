<?xml version='1.0' encoding='UTF-8'?>
<rules>
    <rule attribute='amount' type='donor' person='individual' threshold='> 200' time='year'>
        <require attribute='occupation' />
        <require attribute='employer' />
    </rule>

    <rule attribute='amount' type='donor' person='individual' threshold='> 1000' time='year'>
        <stop />
    </rule>

    <rule attribute='amount' type='donor' person='pac' threshold='> 500' time='year'>
        <stop />
    </rule>

    <rule attribute='amount' type='donor' person='local_party_pac' threshold='> 1000' time='year'>
        <stop />
    </rule>

    <rule attribute='amount' type='donor' person='lobbyist' threshold='> 200' time='year'>
        <stop />
    </rule>

    <rule attribute='amount' type='donor' person='company' threshold='> 0'>
        <stop />
    </rule>

    <rule attribute='amount' type='donor' person='union'>
        <require attribute='principle_officers_names'>
        <require attribute='principle_officers_addresses'>
    </rule>
</rules>
